mixin skill(name, img, style)
    .skill(class=(name == "laravel" ? "skill-push" : ''))
        .skill-title(class=(style ? style : name), class=attributes.class)=name
        .skill-container(class=(style ? style : name))
            img.skill-logo(src=require('../img/'+ img), alt=name, style=attributes.style)

