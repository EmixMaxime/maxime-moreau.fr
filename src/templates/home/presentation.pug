include ../helpers/tooltip
#presentation.site-container
    .box-title
        h2.title.black Présentation
    .presentation
        .presentation-picture
        .presentation-profile
            ul
                li.first
                    span Hobbies :
                    |  Sport & séries TV
                li
                    span Séries préférées :
                    a(href="#silicon")  Silicon Valley
                    a(href="#the100")  The 100
                    a(href="#theWalking")  The walking dead
