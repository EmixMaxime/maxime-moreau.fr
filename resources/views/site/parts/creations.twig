
{% macro creation (img, imgAlt, ref, title, description, href, libelle) %}
  <div class="creations-box l-wrapper">
    <div class="creation-box-wrapper" data-path-hover="m 180,0 -180,0 L 0,0 180,0 z" data-refwork={{ ref }}>
      <figure class="creation-box-figure">

        <img class="creation-box-img" src="{{ img }}" alt={{ imgAlt }} />

        <svg viewBox="0 0 180 320" preserveAspectRatio="none">
          <path d="M 180,160 0,218 0,0 180,0 z" />
        </svg>

        <figcaption class="creation-box-figcaption">
          <p class="creation-box-title">{{ title }}</p>
          <p class="creation-box-desc">{{ description | raw }}</p>
          <a class="creation-box-btn" href={{ href }}>{{ libelle }}</a>
        </figcaption>

      </figure>
    </div>  
  </div>
{% endmacro %}

{% import _self as creation %}

<section class="l-section l-section--blue" id="creations">
  <div class="l-container">
    <h1 class="h2 text-center">{{ 'Quelques-unes de mes cr√©ations' | trans }}</h1>

    <div class="creation-wrapper" id="creation-wrapper">

      {% for c in data.creations %}
        {{ creation.creation(
          c.picture, c.pictureAlt, c.ref, c.title, c.description, c.link, c.linkValue
        ) }}
      {% endfor %}

    </div>
  </div>
</section>

