{% extends 'cv/cv-layout.twig' %}

{# include cv.css in header and cv.js at the end of the body#}
{% set assets = ['cv'] %}

{% macro skillBox(title, name, percentage) %}
  <div class="skills-box">
    <p class="skills-box-title {{ name }} {{ percentage }}">{{ title }}</p>
  </div>
{% endmacro %}

{% macro personalityBox(title, name, percentage) %}
  <div class="personality-box">
    <p>{{ title }}</p>
    <div class="personality-box-progress {{ percentage }}"></div>
  </div>
{% endmacro %}

